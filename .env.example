# Environment Configuration
NODE_ENV=production

# Application
APP_PORT=3000

# Database (PostgreSQL)
POSTGRES_DB=backapp
POSTGRES_USER=backapp
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432
DATABASE_URL=postgresql://backapp:changeme@db:5432/backapp

# NextAuth Configuration
# IMPORTANT: Set this to your public-facing URL
# Examples:
#   Local development: http://localhost:3000
#   Cloudflare Tunnel: https://backapp.davidhsells.org
#   Custom domain: https://yourdomain.com
# This MUST match what users see in their browser!
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here-use-openssl-rand-base64-32

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
# Optional: For LocalStack or MinIO
AWS_S3_ENDPOINT=http://localstack:4566

# SMTP Configuration (Email Notifications)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@backapp.local
SMTP_SECURE=false

# PgAdmin (Development Only)
PGADMIN_EMAIL=admin@backapp.local
PGADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=info

# Backup Configuration
MAX_CONCURRENT_BACKUPS=5
BACKUP_RETRY_ATTEMPTS=3
BACKUP_TIMEOUT_MINUTES=60
# Encryption key for backup files (generate with: openssl rand -base64 32)
BACKUP_ENCRYPTION_KEY=generate-a-random-key-here-use-openssl-rand-base64-32

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# LocalStack Debug (Development)
DEBUG=0
