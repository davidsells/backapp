// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  name         String
  passwordHash String         @map("password_hash")
  role         String         @default("user")
  approved     Boolean        @default(true) // false for new registrations when approval required
  deletedAt    DateTime?      @map("deleted_at") // Soft delete
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  configs      BackupConfig[]
  logs         BackupLog[]
  alerts       Alert[]
  agents       Agent[]

  @@map("users")
}

model BackupConfig {
  id            String      @id @default(uuid())
  userId        String      @map("user_id")
  name          String
  enabled       Boolean     @default(true)
  sources       Json
  destination   Json
  schedule      Json?       // Optional: null for manual-only backups
  options       Json
  agentId       String?     @map("agent_id") // null = server-side backup
  executionMode String      @default("server") @map("execution_mode") // "server" or "agent"
  requestedAt   DateTime?   @map("requested_at") // Set when user clicks "Run Now"
  lastRunAt     DateTime?   @map("last_run_at") // Timestamp of last execution
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  agent         Agent?      @relation(fields: [agentId], references: [id], onDelete: SetNull)
  logs          BackupLog[]
  alerts        Alert[]

  @@index([userId])
  @@index([agentId])
  @@index([requestedAt])
  @@map("backup_configs")
}

model BackupLog {
  id               String       @id @default(uuid())
  configId         String       @map("config_id")
  userId           String       @map("user_id")
  startTime        DateTime     @map("start_time")
  endTime          DateTime?    @map("end_time")
  status           String
  filesProcessed   Int          @default(0) @map("files_processed")
  filesSkipped     Int          @default(0) @map("files_skipped")
  totalBytes       BigInt       @default(0) @map("total_bytes")
  bytesTransferred BigInt       @default(0) @map("bytes_transferred")
  s3Path           String?      @map("s3_path") // Full S3 key where backup is stored
  errors           Json?
  duration         Int?
  createdAt        DateTime     @default(now()) @map("created_at")
  config           BackupConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([configId])
  @@index([startTime])
  @@map("backup_logs")
}

model Alert {
  id           String       @id @default(uuid())
  userId       String       @map("user_id")
  configId     String       @map("config_id")
  type         String
  message      String
  acknowledged Boolean      @default(false)
  timestamp    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  config       BackupConfig @relation(fields: [configId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([configId])
  @@map("alerts")
}

model AppSettings {
  id                     String   @id @default(uuid())
  registrationEnabled    Boolean  @default(false) @map("registration_enabled")
  requireApproval        Boolean  @default(true) @map("require_approval")
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  @@map("app_settings")
}

model Agent {
  id           String         @id @default(uuid())
  name         String         // "David's MacBook"
  apiKey       String         @unique @map("api_key") // Authentication token (plaintext, show once)
  apiKeyHash   String         @map("api_key_hash") // Hashed version for validation
  lastSeen     DateTime?      @map("last_seen") // Last heartbeat
  status       String         @default("offline") // online, offline, error
  platform     String?        // darwin, linux, win32
  version      String?        // agent version
  userId       String         @map("user_id")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  configs      BackupConfig[]
  logs         AgentLog[]

  @@index([userId])
  @@index([status])
  @@map("agents")
}

model AgentLog {
  id        String   @id @default(uuid())
  agentId   String   @map("agent_id")
  level     String   // info, warning, error
  message   String
  metadata  Json?    // Additional context
  timestamp DateTime @default(now())
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@index([timestamp])
  @@index([level])
  @@map("agent_logs")
}

model SizeAssessmentRequest {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  agentId     String    @map("agent_id")
  sources     Json      // Array of source paths to assess
  status      String    @default("pending") // pending, completed, failed
  totalBytes  BigInt?   @map("total_bytes")
  totalFiles  Int?      @map("total_files")
  error       String?
  createdAt   DateTime  @default(now()) @map("created_at")
  completedAt DateTime? @map("completed_at")

  @@index([agentId, status])
  @@index([createdAt])
  @@map("size_assessment_requests")
}

